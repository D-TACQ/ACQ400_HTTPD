#!/bin/sh

if [ "$(cat /proc/device-tree/chosen/model)" = "acq1002" ]; then
	SITE3ID="CELF2";
else
	SITE3ID="SITE3";
fi

monitor() {
cd /dev/hwmon

for file in */*temp
do
	TX=$(cat $file)
	if [ $TX -ne 0 ]
	then
		TC=$(echo $TX | awk '{ if ($1 > 200) $1/=1000; print $1 }')
		SITE=$(dirname $file)
		case $SITE in
		0)
			echo mainboard $TC;;
		3)
			echo $SITE3ID $TC;;
		Z)
			echo ZYNQ $TC;;
		*)
			echo SITE$SITE $TC;;
		esac
	fi
done
}


while [ 1 ]
do
	monitor | fs2xml --kvp >/dev/shm/temp.xml
	sleep 5
done



